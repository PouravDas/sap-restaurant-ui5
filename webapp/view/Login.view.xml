<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    controllerName="com.sap.demoapp.controller.Login"
>
    <Page title="Food Delivery App">
        <content>
            <FlexBox
                justifyContent="Center"
                alignItems="Center"
                class="fullHeight"
            >
                <!-- 
                <VBox

                    fitContainer="true"
                    justifyContent="Center"
                    alignItems="Center"
                    alignContent="Center"
                >-->
                <VBox class="loginContainer">
                    <items>
                        <Text
                            text="Login"
                            class="loginHeader"
                        />
                        <Input
                            id="userID"
                            placeholder="User ID"
                        />
                        <Input
                            id="password"
                            placeholder="Password"
                            type="Password"
                        />
                        <Button
                            width="12rem"
                            text="Login"
                            type="Emphasized"
                            press=".onLogin"
                            class="sapUiSmallMargin"
                        />
                        <Link
                            text="Sign Up"
                            press="onSignup"
                            class="sapUiMediumMarginTop"
                        />
                    </items>
                </VBox>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
